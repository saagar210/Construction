{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Construction Safety Tracker",
  "version": "0.1.0",
  "identifier": "com.construction.safety-tracker",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Construction Safety Tracker",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "dialog": {},
    "fs": {
      "scope": {
        "allow": [
          { "path": "$APPDATA/**" },
          { "path": "$DOWNLOAD/**" },
          { "path": "$HOME/**" }
        ]
      }
    }
  }
}
